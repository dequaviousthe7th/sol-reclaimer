{
  "name": "@sol-reclaim/cli",
  "version": "1.0.0",
  "description": "CLI tool for Solana rent reclaimer",
  "bin": {
    "sol-reclaim": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --clean",
    "dev": "tsup src/index.ts --format cjs --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sol-reclaim/core": "workspace:*",
    "@solana/web3.js": "^1.91.0",
    "bs58": "^5.0.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
